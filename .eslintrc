{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jquery": true
    },
    "globals": {
        "$": true,
    },
    "parser": "babel-eslint",
    "ecmaFeatures": {
        "ecmascript": 6,
        "jsx": true,
        "modules": true
    },
    "rules": {
        "quotes": [2, "single"],
        "no-undef": [2],
        "no-console": 0,
        "semi": [2, "always"],
        "no-extra-semi": 1,
        "no-extra-parens": 0,
        "no-shadow-restricted-names": 2,
        "builtinGlobals": true,
        "no-unused-vars": [2, {vars: local}],
        "babel/generator-star-spacing": 1,
        "babel/arrow-parens": 1,
        "babel/no-await-in-loop": 1,
    },
    "plugins": [
        "babel",
        "eslint-plugin-html"
    ]
}